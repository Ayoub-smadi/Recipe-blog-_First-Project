@model User
@{
    Layout = "~/Views/shared/_Login&RegisterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Restoran - Bootstrap Restaurant Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/Home/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <style>
      

        .main {
            background-color: #0F172B;
        }
    </style>
</head>

<body>

    
<!-- Sing in  Form -->
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="https://img.freepik.com/free-vector/my-password-concept-illustration_114360-6924.jpg?t=st=1715094705~exp=1715095305~hmac=01d139a84f2e2761f342ff05e59473b67af5f4fe9f097b72b215512de82d64eb" alt="sing up image"></figure>
                    <a  asp-action="Register" class="signup-image-link">Create a account</a>
                   
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign In</h2>
                <form asp-action="LogIn" method="post" class="register-form" id="login-form">
                    <div class="form-group">
                        <label asp-for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" asp-for="Username" id="your_name" placeholder="UserName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" asp-for="Password" id="your_pass" placeholder="Password" />
                    </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <style>
                            .text-danger {
                                color: red; 
                            }
                        </style>
                    <style>
                        .custom-btn {
                            background-color: orange !important;
                            color: black !important;
                            border-color: orange !important; 
                        }
                    </style>

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit custom-btn" value="Log in" />
                    </div>

                    


                </form>
                <style>
                    .socials img {
                        width: 40px; /* تحديد العرض */
                        height: 40px; /* تحديد الارتفاع */
                    }
                </style>
               
                <div class="social-login">
                    <span class="social-label">Or login with</span>
                    <ul class="socials">
                        <li><a href="fasebook.com"><img src="https://cdn-icons-png.freepik.com/256/2/2164.png" alt="Facebook"></a></li>
                        <li><a href="Twitter.com"><img src="https://cdn-icons-png.freepik.com/256/254/254405.png?semt=ais_hybrid" alt="Twitter"></a></li>
                        <li><a href="Google.com"><img src="https://cdn-icons-png.freepik.com/256/5968/5968878.png?semt=ais_hybrid" alt="Google"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
  <!-- محتوى صفحتك هنا -->
</body>

</html>
