<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s" style="background-color: #0F172B;">
    <div class="container">
        <div class="text-center">
            <h5 class="section-title ff-secondary text-center fw-normal" style="color: orange;">Testimonial</h5>
            <h1 class="mb-5" style="color: white;">Our Clients Say!!!</h1>
        </div>
        <div id="testimonial-container" class="owl-carousel testimonial-carousel">
            <!-- Existing testimonials here -->
        </div>
        <div class="text-center mt-5">
            <h3 style="color: white;">Add your Testimonial</h3>
            <form id="testimonialForm" method="post" asp-controller="Testimonials" asp-action="Create">
                <div class="form-group">
                    <textarea name="Testimonialcontent" class="form-control mb-3" rows="3" placeholder="Enter your testimonial" required style="background-color: #ffffff; color: #0F172B;"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="background-color: orange; border-color: orange;">Submit</button>
            </form>
        </div>
    </div>
</div>
